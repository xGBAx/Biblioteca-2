            "description": "Cliente atualizado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Cliente"
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação"
          }
        }
      },
      "delete": {
        "summary": "Excluir cliente",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Cliente excluído"
          },
          "400": {
            "description": "Erro na exclusão"
          }
        }
      }
    },
